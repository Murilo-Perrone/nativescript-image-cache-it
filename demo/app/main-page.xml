<Page
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:i="nativescript-image-cache-it" loaded="pageLoaded">
    <GridLayout rows="auto,*">
        <GridLayout columns="*,auto,auto">
            <TextField text="{{newImg}}"/>
            <Button col="1" text="Add Image" tap="addImage"/>
            <Button tap="{{ deleteRandom }}" text="Delete Random"/>
        </GridLayout>


        <ListView id="listView" row="1" items="{{ images }}" itemTemplateSelector="$index % 2 === 0 ? 'even' : 'odd'">
            <ListView.itemTemplates>
                <template key="even">
                    <GridLayout rows="150" columns="150,*" paddingLeft="10">
                        <i:ImageCacheIt loaded="imageLoaded" headers="{{ auth ? auth : defaultHeaders }}" placeHolder="res://law" stretch="fill" tap="onTapEven" class="even" width="150"
                                        height="150" src="{{url}}"/>
                        <stack-layout col="1">
                            <Label text="{{url}}"/>
                            <Label text="{{$index}}"/>
                        </stack-layout>
                    </GridLayout>
                </template>

                <template key="odd">
                    <GridLayout rows="150" columns="150,*" paddingLeft="10">
                        <i:ImageCacheIt loaded="imageLoaded" headers="{{ auth ? auth : defaultHeaders }}"  height="150" width="150" placeHolder="res://law" stretch="fill" tap="onTapOdd" class="odd"
                                        src="{{url}}"/>
                        <stack-layout col="1">
                            <Label text="{{url}}"/>
                            <Label text="{{$index}}"/>
                        </stack-layout>
                    </GridLayout>
                </template>

            </ListView.itemTemplates>
        </ListView>

    </GridLayout>
</Page>
