<Page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:i="nativescript-image-cache-it" loaded="pageLoaded">
  <GridLayout rows="auto,*">
    <GridLayout columns="*,auto,auto">
      <TextField text="{{newImg}}"/>
      <Button col="1" text="Add Image" tap="addImage"/>
      <Button tap="{{ deleteRandom }}" text="Delete Random"/>
    </GridLayout>


    <ListView id="listView" row="1" items="{{ images }}" itemTemplateSelector="$index % 2 === 0 ? 'even' : 'odd'">
      <ListView.itemTemplates>
        <template key="even">
          <GridLayout rows="150"  columns="100,*">
            <i:ImageCacheIt stretch="fill" tap="onTapEven" placeHolder="res://law" errorHolder="res://error"  class="even" width="100" height="100" src="{{url}}"/>
            <stack-layout col="1">
              <Label text="{{url}}"/>
            </stack-layout>
          </GridLayout>
        </template>

        <template key="odd">
          <GridLayout rows="150" columns="100,*">
            <i:ImageCacheIt stretch="fill" tap="onTapOdd" placeHolder="~/assets/images/naruto.jpg" errorHolder="res://error" class="odd" src="{{url}}"/>
            <stack-layout col="1">
              <Label text="{{url}}"/>
            </stack-layout>
          </GridLayout>
        </template>

      </ListView.itemTemplates>
    </ListView>

  </GridLayout>
</Page>
